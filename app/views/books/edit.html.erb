<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-7 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book do |f| %>
        <div class="mb-3">
          <label for="inputTitle" class="form-label">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル", class: "form-control" %>
        </div>
        <div class="mb-3">
          <label for="inputOpinion" class="form-label">Opinion</label>
          <%= f.text_area :body, autofocus: true, id:"inputOpinion", placeholder:"感想", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-md btn-success" %>
        </div>
      <% end %>

      <%= link_to "Show", book_path(@book.id) %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>