<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <!--<div class="col-lg-1" style="background-color: orange;">-->
    <!--</div>-->
    <div class="col-lg-4">
      <h2>User info</h2>
       <div>
         <%= image_tag @user.get_profile_image(100, 100) %>
         <table class="table">
           <thead>
             <tr>
               <th>name</th>
               <td><%= @user.name %></td>
             </tr>
           </thead>
           <tbody>
             <tr>
               <th>introduction</th>
               <td><%= @user.introduction %></td>
             </tr>
           </tbody>
         </table>
       </div>

         <% if @user != current_user %>
           <%= link_to user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
           <i class="fa-solid fa-user-gear"></i>
           <% end %>
         <% else %>
           <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
           <i class="fa-solid fa-user-gear"></i>
           <% end %>
         <% end %>

       <h2>New book</h2>
       <% if @bookers.errors.any? %>
         <%= @bookers.errors.count %>errors prohibited this obj from being saved:
         <ul>
           <% @bookers.errors.full_messages.each do |message| %>
             <li><%= message %></li>
           <% end %>
         </ul>
       <% end %>

        <%= form_with model: @bookers do |f| %>
          <div class="mb-3">
            <label for="exampleInputTitle1" class="form-label">Title</label>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <label for="exampleInputOpinion1" class="form-label">Opinion</label>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-md btn-success" %>
          </div>
        <% end %>
    </div>

    <div class="col-lg-8">
    <h2>Books</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
