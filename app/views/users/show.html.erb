<h1>User info</h1>
 <div>
   <%= image_tag @user.get_profile_image(100, 100) %>
   <b>name</b>
   <%= @user.name %>
   <b>introduction</b>
   <%= @user.introduction %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
 </div>

<h1>Users</h1>
<% @books.each do |book| %>
  <div>
    <%= image_tag book.user.get_profile_image(100,100) %>
    <b>Title></b>
    <span>
      <%= link_to book.title, "/books/#{book.id}" %>
    </span>
    <b>Opinion<%= book.body %></b>
  </div>
<% end %>
