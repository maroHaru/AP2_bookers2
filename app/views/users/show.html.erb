<%= flash[:notice] %>

<h1>User info</h1>
 <div>
   <%= image_tag @user.get_profile_image(100, 100) %>
   <b>name</b>
   <%= @user.name %>
   <b>introduction</b>
   <%= @user.introduction %>
   <% if @user != current_user %>
     <p><%= link_to "プロフィール編集", user_path(@user.id) %></p>
   <% else %>
     <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
  <% end %>
 </div>

 <h1>New book</h1>
<% if @bookers.errors.any? %>
  <%= @bookers.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @bookers.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>


  <%= form_with model: @bookers do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
