<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-lg-1" style="background-color: orange;">
    </div>
    <div class="col-lg-4">
      <h1>User info</h1>
       <div>
         <%= image_tag @user.get_profile_image(100, 100) %>
         <b>name</b>
         <%= @user.name %>
         <b>introduction</b>
         <%= @user.introduction %>
         <% if @user != current_user %>
           <p><%= link_to "プロフィール編集", user_path(current_user.id) %></p>
         <% else %>
           <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
        <% end %>
       </div>

       <h1>New book</h1>
       <% if @bookers.errors.any? %>
         <%= @bookers.errors.count %>errors prohibited this obj from being saved:
         <ul>
           <% @bookers.errors.full_messages.each do |message| %>
             <li><%= message %></li>
           <% end %>
         </ul>
       <% end %>

        <%= form_with model: @bookers do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
    </div>
    <div class="col-lg-7">
    <h1>Books</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
