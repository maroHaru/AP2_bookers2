<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <h1>Users info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class="mb-3">
          <label for="inputName" class="form-label">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
        </div>
        <div class="mb-3">
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*"%>
        </div>
        <div class="mb-3">
          <label for="inputIntroduction" class="form-label">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"紹介", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-md btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>