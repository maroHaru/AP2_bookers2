<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <% if @bookers.errors.any? %>
        <%= @bookers.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @bookers.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
      <% end %>
      <h2>User info</h2>
       <div>
         <%= image_tag current_user.get_profile_image(100, 100) %>
         <table class="table">
           <thead>
             <tr>
               <th>name</th>
               <td><%= current_user.name %></td>
             </tr>
           </thead>
           <tbody>
             <tr>
               <th>introduction</th>
               <td><%= current_user.introduction %></td>
             </tr>
           </tbody>
         </table>
       </div>

        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-cog"></i>
        <% end %>

       <h2>New book</h2>
        <%= form_with model: @bookers do |f| %>
          <div class="mb-3">
            <label for="exampleInputTitle1" class="form-label">Title</label>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <label for="exampleInputOpinion1" class="form-label">Opinion</label>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-md btn-success" %>
          </div>
        <% end %>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-8">
    <h1>Users</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>