  <% end %>

<h1>Users</h1>
<% @users.each do |user| %>
  <div>
    <b>image<%= image_tag user.get_profile_image(100,100) %></b>
    <b>name<%= user.name %></b>
    <%= link_to "Show", user_path(user.id) %>
  </div>
<% end %>
